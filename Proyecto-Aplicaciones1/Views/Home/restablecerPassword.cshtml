@{
    Layout = null;
    var token = Context.Request.Query["token"];

}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alquila Gestión Inmobiliaria | Forgot password</title>
    <!-- GLOBAL MAINLY STYLES-->
    <link href="~/assets/css2/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Lato:300,300i,400,400i%7CMontserrat:600,800, 700" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <!-- THEME STYLES-->
    <link href="~/assets/css2/css/main.css" rel="stylesheet" />
    <!-- PAGE LEVEL STYLES-->
    <link href="~/assets/css2/css/pages/auth-light.css" rel="stylesheet" />

    <style>
        body {
            background-color: white; /* Cambia el fondo de la página al mismo color que el formulario */
            margin: 0;
            font-family: 'Montserrat', sans-serif;
        }

        /* Contenedor general centrado */
        .container-centered {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            flex-direction: column;
            background-color: #f7f7f7;
            padding-top: 50px; /* Agregado para dejar espacio entre el logo y la parte superior */
        }

        /* Contenedor del logo */
        .logo {
            position: absolute;
            top: 20px; /* Posiciona el logo hacia la parte superior de la página */
            left: 50%;
            transform: translateX(-50%);
        }

            .logo img {
                width: 50px;
            }

        /* Contenedor del formulario */
        .reset-password-container {
            max-width: 400px;
            padding: 20px;
            border-radius: 8px;
            background-color: transparent;
            text-align: center;
            margin-top: 50px; /* Espacio adicional entre el formulario y el logo */
        }

            .reset-password-container h3 {
                margin-bottom: 10px;
                font-size: 1.5rem;
            }

            .reset-password-container p {
                margin-bottom: 30px;
                font-size: 1rem;
                color: #555;
            }

        .form-group {
            position: relative;
            margin-bottom: 30px;
        }

            .form-group input {
                font-size: 1rem;
                padding: 15px 10px;
                width: 100%;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .form-group label {
                position: absolute;
                top: 15px;
                left: 10px;
                font-size: 1rem;
                color: #999;
                transition: all 0.2s;
                pointer-events: none;
            }

            .form-group input:focus + label,
            .form-group input:not(:placeholder-shown) + label {
                top: -10px;
                left: 5px;
                font-size: 0.85rem;
                color: #333;
            }

        .btn-custom {
            background-color: black;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            width: 100%;
        }

            .btn-custom:hover {
                background-color: #333;
            }

        .invalid-feedback {
            display: none;
            color: red;
            font-size: 0.875rem;
        }

        .was-validated .form-control:invalid ~ .invalid-feedback {
            display: block;
        }

        .was-validated .form-control:valid {
            border-color: #28a745;
        }

        #logo img {
            max-height: 70px; /* Ajusta este valor según la altura de tu navbar */
            height: auto;
            width: auto;
            display: block;
            transform: scale(3); /* Ajusta el valor para agrandar o reducir el logo */
            transform-origin: center; /* Esto asegura que el logo se escale desde el centro */
        }

        #logo {
            display: flex;
            align-items: center;
            padding: 0;
            margin: 0;
        }
    </style>
</head>

<body>
    <div class="container-centered">
        <div class="reset-password-container">
            <h3><strong>Restablece tu contraseña</strong></h3>
            <p>Introduce una nueva contraseña para cambiar tu contraseña actual.</p>
            <form id="resetPasswordForm" method="post">
                <input type="hidden" id="token" name="token" value="@token" />
                <div class="form-group mb-3">
                    <input type="password" class="form-control" id="newPassword" name="nuevaPassword" placeholder="Nueva contraseña" required minlength="12" />
                    <div class="invalid-feedback">La contraseña debe tener al menos 12 caracteres.</div>
                </div>
                <div class="form-group mb-3">
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirmar contraseña" required minlength="12" />
                    <div class="invalid-feedback">Las contraseñas no coinciden o no cumplen los requisitos.</div>
                </div>
                <button class="btn btn-custom" type="submit">Restablecer contraseña</button>
            </form>
        </div>
    </div>
    <script>
        document.getElementById('resetPasswordForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const form = e.target;
            const formData = new FormData(form);

            const resp = await fetch('/Cuenta/RestablecerPassword', {
                method: 'POST',
                body: formData
            });

            const data = await resp.json();

            Swal.fire({
                icon: data.icon,
                title: data.title,
                text: data.message
            });

            if (data.icon === "success") {
                form.reset();
            }
        });
    </script>
</body>

</html>
