@model Proyecto_Aplicaciones1.Models.Cliente
@{
    Layout = "~/Views/Shared/_LayoutDashBoard.cshtml";
    ViewData["Title"] = "Agregar Cliente";
}

<div class="page-heading">
    <h1 class="page-title">Agregar cliente</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="index.html"><i class="la la-home font-20"></i></a>
        </li>
        <li class="breadcrumb-item">Agregar cliente</li>
    </ol>
</div>
<div class="page-content fade-in-up">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox">
                <div class="ibox-head">
                    <div class="ibox-title">Datos del nuevo cliente</div>
                </div>
                <div class="ibox-body">
                    <form asp-controller="Clientes" asp-action="Agregar" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label asp-for="Nombre"></label>
                                <input asp-for="Nombre" class="form-control" placeholder="Nombre del cliente">
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6 form-group">
                                <label asp-for="Apellido"></label>
                                <input asp-for="Apellido" class="form-control" placeholder="Apellido del cliente">
                                <span asp-validation-for="Apellido" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6 form-group">
                                <label asp-for="Correo">Correo Electrónico</label>
                                <input asp-for="Correo" class="form-control" placeholder="ejemplo@correo.com">
                                <span asp-validation-for="Correo" class="text-danger"></span>
                            </div>
                            <div class="col-sm-6 form-group">
                                <label asp-for="Telefono"></label>
                                <input asp-for="Telefono" class="form-control" placeholder="Ej: 88888888">
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                            <div class="col-sm-12 form-group">
                                <label asp-for="Direccion"></label>
                                <input asp-for="Direccion" class="form-control" placeholder="Provincia, Cantón, Distrito">
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success" type="submit">Guardar</button>
                            <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

