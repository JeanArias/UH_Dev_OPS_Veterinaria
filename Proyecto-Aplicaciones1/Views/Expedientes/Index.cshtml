@model Proyecto_Aplicaciones1.Models.Expediente

@{
    Layout = "~/Views/Shared/_LayoutDashBoard.cshtml";
    ViewData["Title"] = "Gestión de Expedientes";
    var expedientes = ViewBag.Expedientes as List<Proyecto_Aplicaciones1.Models.Expediente> ?? new();
}

<div class="page-heading">
    <h1 class="page-title">Gestión de Expedientes</h1>
</div>

<div class="page-content fade-in-up">
    <div class="row">
        <div class="col-md-12">

            <!-- FORMULARIO DE CREACIÓN -->
            <div class="ibox">
                <div class="ibox-head">
                    <div class="ibox-title">Registrar Expediente</div>
                </div>
                <div class="ibox-body">
                    <form asp-action="Index" asp-controller="Expedientes" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                        <div class="row">
                            <div class="col-sm-4 form-group">
                                <label asp-for="MascotaId" class="form-label">ID de Mascota</label>
                                <input asp-for="MascotaId" class="form-control" placeholder="Ej: 1" />
                                <span asp-validation-for="MascotaId" class="text-danger"></span>
                            </div>
                            <div class="col-sm-4 form-group">
                                <label asp-for="FechaApertura" class="form-label">Fecha de Apertura</label>
                                <input asp-for="FechaApertura" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                <span asp-validation-for="FechaApertura" class="text-danger"></span>
                            </div>
                            <div class="col-sm-4 form-group">
                                <label asp-for="Observaciones" class="form-label">Observaciones</label>
                                <textarea asp-for="Observaciones" class="form-control" rows="1"></textarea>
                                <span asp-validation-for="Observaciones" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group mt-2">
                            <button class="btn btn-success" type="submit"><i class="fa fa-save"></i> Guardar</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- TABLA DE EXPEDIENTES -->
            <div class="ibox mt-4">
                <div class="ibox-head">
                    <div class="ibox-title">Lista de Expedientes</div>
                </div>
                <div class="ibox-body">
                    <table class="table table-striped table-bordered table-hover" id="table-expedientes">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Mascota ID</th>
                                <th>Fecha Apertura</th>
                                <th>Observaciones</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in expedientes)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.MascotaId</td>
                                    <td>@item.FechaApertura.ToString("yyyy-MM-dd")</td>
                                    <td>@item.Observaciones</td>
                                    <td>
                                        <button class="btn btn-warning btn-xs text-white" onclick="abrirModalEditar(@item.Id)">
                                            <i class="fa fa-edit"></i>
                                        </button>
                                        <button class="btn btn-danger btn-xs" onclick="confirmarEliminar(@item.Id)">
                                            <i class="fa fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- MODAL EDITAR EXPEDIENTE -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Editar Expediente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <input type="hidden" id="editId" />
                    <div class="mb-3">
                        <label for="editMascotaId" class="form-label">Mascota ID</label>
                        <input type="number" class="form-control" id="editMascotaId" required />
                    </div>
                    <div class="mb-3">
                        <label for="editFechaApertura" class="form-label">Fecha de Apertura</label>
                        <input type="date" class="form-control" id="editFechaApertura" required />
                    </div>
                    <div class="mb-3">
                        <label for="editObservaciones" class="form-label">Observaciones</label>
                        <textarea class="form-control" id="editObservaciones" required></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button class="btn btn-primary" onclick="guardarCambios()">Guardar cambios</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#table-expedientes').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/Spanish.json"
                }
            });
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const apiExpedientesUrl = 'https://localhost:7275/api/Expedientes';

        async function abrirModalEditar(id) {
            const response = await fetch(`${apiExpedientesUrl}/${id}`);
            if (!response.ok) {
                return Swal.fire('Error', 'No se pudo obtener el expediente.', 'error');
            }
            const expediente = await response.json();
            document.getElementById('editId').value = expediente.id;
            document.getElementById('editMascotaId').value = expediente.mascotaId;
            document.getElementById('editFechaApertura').value = expediente.fechaApertura.split('T')[0];
            document.getElementById('editObservaciones').value = expediente.observaciones;
            $('#editModal').modal('show');
        }

        function guardarCambios() {
            const id = document.getElementById('editId').value;
            const expedienteActualizado = {
                id: parseInt(id),
                mascotaId: parseInt(document.getElementById('editMascotaId').value),
                fechaApertura: document.getElementById('editFechaApertura').value,
                observaciones: document.getElementById('editObservaciones').value
            };

            fetch(`${apiExpedientesUrl}/${id}`, {
                method: 'PUT',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(expedienteActualizado)
            }).then(response => {
                if (response.ok) {
                    $('#editModal').modal('hide');
                    Swal.fire('¡Actualizado!', 'El expediente fue editado correctamente.', 'success')
                        .then(() => location.reload());
                } else {
                    Swal.fire('Error', 'No se pudo editar el expediente.', 'error');
                }
            });
        }

        function confirmarEliminar(id) {
            Swal.fire({
                title: '¿Estás seguro?',
                text: '¡Esto eliminará el expediente!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then(result => {
                if (result.isConfirmed) {
                    fetch(`${apiExpedientesUrl}/${id}`, { method: 'DELETE' })
                        .then(response => {
                            if (response.ok) {
                                Swal.fire('¡Eliminado!', 'El expediente fue eliminado.', 'success')
                                    .then(() => location.reload());
                            } else {
                                Swal.fire('Error', 'No se pudo eliminar.', 'error');
                            }
                        });
                }
            });
        }
    </script>
}