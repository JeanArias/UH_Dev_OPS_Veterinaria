@model Proyecto_Aplicaciones1.Models.Mascota
@{
    Layout = "~/Views/Shared/_LayoutDashBoard.cshtml";
    ViewData["Title"] = "Agregar Mascota";
}

<div class="page-heading">
    <h1 class="page-title">Agregar Mascota</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="index.html"><i class="la la-home font-20"></i></a>
        </li>
        <li class="breadcrumb-item">Agregar Mascota</li>
    </ol>
</div>
<div class="page-content fade-in-up">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox">
                <div class="ibox-head">
                    <div class="ibox-title">Datos de la nueva mascota</div>
                </div>
                <div class="ibox-body">
                    <form asp-controller="Mascotas" asp-action="Agregar" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label asp-for="Nombre"></label>
                                <input asp-for="Nombre" class="form-control" placeholder="Nombre de la mascota">
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>

                            <div class="col-sm-6 form-group">
                                <label asp-for="Especie"></label>
                                <input asp-for="Especie" class="form-control" placeholder="Ej: Perro, Gato">
                                <span asp-validation-for="Especie" class="text-danger"></span>
                            </div>

                            <div class="col-sm-6 form-group">
                                <label asp-for="Raza"></label>
                                <input asp-for="Raza" class="form-control" placeholder="Ej: Labrador, Siamés">
                                <span asp-validation-for="Raza" class="text-danger"></span>
                            </div>

                            <div class="col-sm-6 form-group">
                                <label asp-for="FechaNacimiento">Fecha de Nacimiento</label>
                                <input asp-for="FechaNacimiento" class="form-control" type="date">
                                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                            </div>

                            <div class="col-sm-6 form-group">
                                <label asp-for="Sexo"></label>
                                <select asp-for="Sexo" class="form-control">
                                    <option value="">Seleccione el sexo...</option>
                                    <option value="Macho">Macho</option>
                                    <option value="Hembra">Hembra</option>
                                </select>
                                <span asp-validation-for="Sexo" class="text-danger"></span>
                            </div>

                            <div class="col-sm-6 form-group">
                                <label asp-for="ClienteId">Dueño</label>
                                <select asp-for="ClienteId" asp-items="@ViewBag.Clientes" class="form-control">
                                    <option value="">Seleccione un cliente...</option>
                                </select>
                                <span asp-validation-for="ClienteId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success" type="submit">Guardar Mascota</button>
                            <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>